<!DOCTYPE module SYSTEM "module.dtd">

<module name="motor_dynamics">
  <doc>
    <description>Motor dynamics identification</description>
  </doc>

  <settings target="ap">
    <dl_settings>
      <dl_settings name="Motor Dynamics">
        <dl_setting var="motor_dynamics.actuator_idx" min="0" max="50" step="1" shortname="Act IDX" type="int8_t" module="motor_dynamics/motor_dynamics" handler="actuator_idx_handler"/>
        <dl_setting var="motor_dynamics.step_min" min="0" max="9600" step="1" shortname="Step Min" type="int32_t" module="motor_dynamics/motor_dynamics" handler="step_min_handler"/>
        <dl_setting var="motor_dynamics.step_max" min="0" max="9600" step="1" shortname="Step Max" type="int32_t" module="motor_dynamics/motor_dynamics" handler="step_max_handler"/>
        <dl_setting var="motor_dynamics.start_test" min="0" max="1" step="1" shortname="Stop/Start" values="STOP|START" type="uint8_t" module="motor_dynamics/motor_dynamics" handler="start_test_handler"/>
        <dl_setting var="motor_dynamics.mode" min="0" max="1" step="1" values="NOMINAL|BODE" shortname="Mode" type="uint8_t" module="motor_dynamics/motor_dynamics" handler="mode_select_handler"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="motor_dynamics.h"/>
  </header>
  <init fun="motor_dynamics_init()"/>
  <makefile target="ap">
    <file name="motor_dynamics.c"/>
  </makefile>
</module>